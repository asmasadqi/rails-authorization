<p style="color: green"><%= notice %></p>

<h1>Restaurants</h1>

<div id="restaurants">
  <% @restaurants.each do |restaurant| %>
    <%= render restaurant %>
    <p>
      <%= link_to "Show this restaurant", restaurant %>
      <% if policy(restaurant).edit? %>
        <%= link_to "Edit this restaurant", edit_restaurant_path(restaurant) %>
      <% end %>
      <% if policy(restaurant).destroy? %>
        <%= link_to "Destroy", restaurant, method: :delete, data: { confirm: "are you sure?" } %>
      <% end %>
    </p>
  <% end %>
</div>
<% if policy(Restaurant).create? %>
  <%= link_to "New restaurant", new_restaurant_path %>
<% end %>
